{
  "name": "nuxt-app",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "nuxt build --dotenv env/.env.prod",
    "bd": "yarn build && yarn deploy",
    "deploy": "yarn deploy:frontend & yarn deploy:backend",
    "deploy:frontend": "sh scripts/yc-deploy.frontend.sh",
    "deploy:backend": "sh scripts/yc-deploy.backend.sh",
    "deploy:gateway": "sh scripts/yc-deploy.api-gateway.sh",
    "dev": "nuxt dev --dotenv env/.env.local",
    "dev:update-iam-token": "sh scripts/yc.update-local-iam-token.sh",
    "ydb:init": "docker pull cr.yandex/yc/yandex-docker-local-ydb:latest",
    "ydb:run": "cd server/ydb/local-instance && sh ../yc.ydb.run.sh",
    "ydb:stop": "docker stop ydb-local",
    "generate": "nuxt generate",
    "preview": "nuxt preview",
    "postinstall": "nuxt prepare && patch-package"
  },
  "devDependencies": {
    "@nuxt/devtools": "latest",
    "@rollup/plugin-commonjs": "^25.0.3",
    "@rollup/plugin-json": "^6.0.0",
    "@rollup/plugin-node-resolve": "^15.1.0",
    "@sidebase/nuxt-auth": "^0.6.0-beta.3",
    "@types/lodash-es": "^4.17.8",
    "@types/node": "^18",
    "nuxt": "^3.6.1",
    "patch-package": "^7.0.2",
    "postinstall-postinstall": "^2.1.0",
    "sass": "^1.63.6",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6"
  },
  "dependencies": {
    "@invictus.codes/nuxt-vuetify": "^0.3.0",
    "@vueuse/components": "^10.2.1",
    "@vueuse/nuxt": "^10.2.1",
    "@yandex-cloud/nodejs-sdk": "^2.4.7",
    "blizzapi": "^2.6.1",
    "date-fns": "^2.30.0",
    "events": "^3.3.0",
    "fuse.js": "^6.6.2",
    "lodash-es": "^4.17.21",
    "next-auth": "^4.22.1",
    "vue-masonry": "^0.16.0",
    "ydb-sdk": "^4.6.0",
    "zod": "^3.21.4"
  }
}
